<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="xxmmk.mobileskd.ErrorLogin"
    android:background="#d6363636"
    android:weightSum="1">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="272dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/f"
            android:background="#00ff5200">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageView"
                android:layout_gravity="center|top"
                android:src="@drawable/ok"
                android:maxHeight="100dp"
                android:maxWidth="100dp"
                android:longClickable="false"
                android:minHeight="100dp"
                android:minWidth="100dp"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/photoim"
                android:layout_gravity="center_horizontal|bottom" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ДОСТУП РАЗРЕШЕН"
        android:id="@+id/x1000"
        android:gravity="center_horizontal|bottom"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#66CC66"
        android:textSize="60dp"
        android:textIsSelectable="false"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/textView2"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Авторизация прошла успешно\n"
        android:id="@+id/textView2"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:gravity="center_horizontal|bottom"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_above="@+id/bkerr"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Далее"
        android:id="@+id/bkerr"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:textSize="25dp"
        android:width="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bk_state" />

</RelativeLayout>